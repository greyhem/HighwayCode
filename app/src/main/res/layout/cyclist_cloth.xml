<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A567E">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/close_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/close" />
        <ImageView
            android:id="@+id/cyimageView1"
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/cloth2"
            android:paddingLeft="10dp"
            android:baselineAlignBottom="true" />

        <TextView
            android:id="@+id/pedstextView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Clothing"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:background="#000000"
            android:gravity="center"
            android:layout_toRightOf="@+id/cycimageView1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/cycimageView1"
            android:clickable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 1. a cycle helmet which conforms to current regulations, is the correct size and securely fastened. "
            android:textSize="16dp"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 2. appropriate clothes for cycling. Avoid clothes which may get tangled in the chain, or in a wheel or may obscure your lights ."

            android:textSize="16dp"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 3.  light-coloured or fluorescent clothing which helps other road users to see you in daylight and poor light
"


            android:textSize="16dp"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 4. reflective clothing and/or accessories (belt, arm or ankle bands) in the dark."

            android:textSize="16dp"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            />





    </LinearLayout>

</ScrollView>